@model IEnumerable<Souvenir.Models.Product>
@foreach(var h in Model)
{
    string Url = $"/product/{h.Alias}-{h.ProductId}.html";
    <div class="col-md-6 col-lg-4 col-xl-3">
        <div class="rounded position-relative fruite-item">
            <div class="fruite-img">
                <a href="@Url">
                    <img src="@h.ImageUrl" style="width: 200px; height: 200px;" class="img-fluid w-100 rounded-top" alt="">
                </a>
               
			</div>

            <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">HuyenBaby</div>
            <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                <h4>@h.ProductName</h4>
                <p>@h.Description</p>
                <div class="d-flex justify-content-between flex-lg-wrap">
                    <p class="text-dark fs-5 fw-bold mb-0">@h.Price / kg</p>
                    <a href="#" class="btn border border-secondary rounded-pill px-3 text-primary"><i class="fa fa-shopping-bag me-2 text-primary"></i> Add to cart</a>
                </div>
            </div>
        </div>
    </div>
}