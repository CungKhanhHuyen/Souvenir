@model Souvenir.Models.Menu

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Menu</h4>
<hr />
<div class="row">
    <div class="col-md-8 offset-md-2">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Hidden Field for MenuId -->
            <input type="hidden" asp-for="MenuId" />

            <!-- MenuName Field -->
            <div class="form-group row">
                <label asp-for="MenuName" class="col-sm-3 col-form-label">Menu Name</label>
                <div class="col-sm-9">
                    <input asp-for="MenuName" class="form-control" />
                    <span asp-validation-for="MenuName" class="text-danger"></span>
                </div>
            </div>

            <!-- Alias Field -->
            <div class="form-group row">
                <label asp-for="Alias" class="col-sm-3 col-form-label">Alias</label>
                <div class="col-sm-9">
                    <input asp-for="Alias" class="form-control" />
                    <span asp-validation-for="Alias" class="text-danger"></span>
                </div>
            </div>

            <!-- URL Field -->
            <div class="form-group row">
                <label asp-for="Url" class="col-sm-3 col-form-label">URL</label>
                <div class="col-sm-9">
                    <input asp-for="Url" class="form-control" />
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>
            </div>

            <!-- ParentId Field -->
            <div class="form-group row">
                <label asp-for="ParentId" class="col-sm-3 col-form-label">Parent ID</label>
                <div class="col-sm-9">
                    <input asp-for="ParentId" class="form-control" />
                    <span asp-validation-for="ParentId" class="text-danger"></span>
                </div>
            </div>

            <!-- IsActive Field -->
            <div class="form-group row">
                <label asp-for="IsActive" class="col-sm-3 col-form-label">Is Active</label>
                <div class="col-sm-9">
                    <input asp-for="IsActive" class="form-control" type="text" />
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div>
            </div>

            <!-- CreatedAt Field -->
            <div class="form-group row">
                <label asp-for="CreatedAt" class="col-sm-3 col-form-label">Created At</label>
                <div class="col-sm-9">
                    <input asp-for="CreatedAt" class="form-control" type="datetime-local" />
                    <span asp-validation-for="CreatedAt" class="text-danger"></span>
                </div>
            </div>

            <!-- UpdatedAt Field -->
            <div class="form-group row">
                <label asp-for="UpdatedAt" class="col-sm-3 col-form-label">Updated At</label>
                <div class="col-sm-9">
                    <input asp-for="UpdatedAt" class="form-control" type="datetime-local" />
                    <span asp-validation-for="UpdatedAt" class="text-danger"></span>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="form-group row">
                <div class="col-sm-9 offset-sm-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
