@model Souvenir.Models.Contact

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">Tạo Mới Liên Lạc</h1>

<h4 class="mb-4">Thông Tin Liên Hệ</h4>
<hr />

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Create">
            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- Full Name -->
            <div class="form-group mb-3">
                <label asp-for="FullName" class="control-label">Họ và Tên</label>
                <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Nhập email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Message -->
            <div class="form-group mb-3">
                <label asp-for="Message" class="control-label">Lời Nhắn</label>
                <textarea asp-for="Message" class="form-control" rows="4" placeholder="Nhập lời nhắn"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <button type="submit" class="btn btn-success w-100">Tạo Mới</button>
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a class="btn btn-secondary" asp-action="Index">Quay lại Danh Sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
