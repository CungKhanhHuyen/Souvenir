@model Souvenir.Models.Contact

@{
    ViewData["Title"] = "Xóa Liên Hệ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">Xóa Liên Hệ</h1>

<h3 class="mb-3 text-danger">Bạn có chắc chắn muốn xóa thông tin này?</h3>

<div class="card p-4">
    <h4>Thông Tin Liên Hệ</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.FullName)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Message)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Message)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ContactId" />

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-danger">Xóa</button>
            <a class="btn btn-secondary" asp-action="Index">Quay lại Danh Sách</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
