@model Souvenir.Models.Product

@{
    ViewData["Title"] = "Chỉnh Sửa Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4 text-primary">Chỉnh Sửa Sản Phẩm</h1>

<h4>Thông Tin Sản Phẩm</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductId" />

            <!-- Chọn Danh Mục -->
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">Danh Mục</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <!-- Tên Sản Phẩm -->
            <div class="form-group">
                <label asp-for="ProductName" class="control-label">Tên Sản Phẩm</label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <!-- Alias -->
            <div class="form-group">
                <label asp-for="Alias" class="control-label">Alias</label>
                <input asp-for="Alias" class="form-control" />
                <span asp-validation-for="Alias" class="text-danger"></span>
            </div>

            <!-- Mô Tả -->
            <div class="form-group">
                <label asp-for="Description" class="control-label">Mô Tả</label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Giá -->
            <div class="form-group">
                <label asp-for="Price" class="control-label">Giá</label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- Giảm Giá -->
            <div class="form-group">
                <label asp-for="Discount" class="control-label">Giảm Giá (%)</label>
                <input asp-for="Discount" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>

            <!-- Số Lượng -->
            <div class="form-group">
                <label asp-for="Stock" class="control-label">Số Lượng</label>
                <input asp-for="Stock" class="form-control" type="number" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

            <!-- Hình Ảnh -->
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label">Hình Ảnh</label>
                <input asp-for="ImageUrl" class="form-control" type="file" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>

                <!-- Hiển thị hình ảnh hiện tại nếu có -->
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="mt-2">
                        <img src="@Model.ImageUrl" alt="Product Image" class="img-thumbnail" style="max-width: 150px;" />
                        <p class="mt-2">Hình ảnh hiện tại</p>
                    </div>
                }
            </div>

            <!-- Trạng Thái -->
            <div class="form-group">
                <label asp-for="IsActive" class="control-label">Trạng Thái</label>
                <div class="form-check">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                    <label class="form-check-label" for="IsActive">Sản phẩm hoạt động</label>
                </div>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>

            <!-- Thời Gian Tạo -->
            <div class="form-group">
                <label asp-for="CreatedAt" class="control-label">Ngày Tạo</label>
                <input asp-for="CreatedAt" class="form-control" readonly />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>

            <!-- Thời Gian Cập Nhật -->
            <div class="form-group">
                <label asp-for="UpdatedAt" class="control-label">Ngày Cập Nhật</label>
                <input asp-for="UpdatedAt" class="form-control" readonly />
                <span asp-validation-for="UpdatedAt" class="text-danger"></span>
            </div>

            <!-- Chi Tiết -->
            <div class="form-group">
                <label asp-for="Details" class="control-label">Chi Tiết</label>
                <textarea asp-for="Details" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Lưu Thay Đổi" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index">Quay lại danh sách sản phẩm</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
