@model IEnumerable<Souvenir.Models.Category>

@{
    ViewData["Title"] = "Danh Sách Danh Mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4 text-primary">Danh Sách Danh Mục</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Tạo Danh Mục Mới</a>
</p>

<table class="table table-striped table-bordered mt-3">
    <thead class="table-dark">
        <tr>
            <th>STT</th>
            <th>Tên Danh Mục</th>
            <th>Alias</th>
            <th>Mô Tả</th>
            <th>Trạng Thái</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @{
            var h = 1;
        }
        @foreach (var item in Model)
        {
            <tr class="text-danger">
                <td>@(h++)</td>
                <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                <td>@Html.DisplayFor(modelItem => item.Alias)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge text-success">Hoạt Động</span>
                    }
                    else
                    {
                        <span class="badge text-danger">Không Hoạt Động</span>
                    }
                </td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.CategoryId">
                        <i class="bi bi-pencil-square"></i> Sửa
                    </a>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.CategoryId">
                        <i class="bi bi-eye"></i> Xem
                    </a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.CategoryId">
                        <i class="bi bi-trash"></i> Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


